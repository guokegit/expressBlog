<%- include header %>
<% if(blogArr.length == 0){ %>
<p>没有搜到符合你要求的内容</p>
<% }else { %>
<% blogArr.forEach(function (blog) { %>
<div style="margin-top: 20px;padding:20px;background-color:#ffffff;border: #dddddd 1px solid;box-shadow: #dddddd 1px 1px 1px 1px;">
    <div class="flex-row">
        <a style="font-size: 25px"
           href="/u/<%= blog.name %>/<%= blog.time.day %>/<%= blog.title %>"><%= blog.title %></a>
        <span style="font-size: 12px;color: #aaaaaa;"><%= blog.time.minute %></span>
    </div>

    <div style="font-size: 12px;margin-top: 20px" class="flex-row">
        <div class="flex-row">
            <img src="<%= blog.icon %>"
                 style="height: 30px;width: 30px;border: 0px;border-radius: 15px;margin-right: 10px" />
            <a href="/u/<%= blog.name %>" style="margin-right: 10px"><%= blog.name %></a>
        </div>
        <div class="flex-row">
            <div style="margin-right: 20px">
                <img src="http://39.108.190.79:3389/uploads/eye.png" style="margin-right: 5px;opacity: 0.6">
                <span style="color: #aaaaaa"><%= blog.pv %></span>
            </div>
            <div>
                <img src="http://39.108.190.79:3389/uploads/comment.png" style="margin-right: 5px;opacity: 0.6">
                <span style="color: #aaaaaa"><%= blog.commits.length %></span>
            </div>
        </div>
    </div>
</div>
<% }) %>
<% } %>
<%- include footer %>