<%-include header%>
<%if(blogArr.length==0){%>
    <p>没有搜到符合你要求的内容</p>
<%}else {%>
    <%blogArr.forEach(function (blog) {%>
        <div style="height: 100px;background-color: #ffffff;box-shadow: 2px 2px 2px #dddddd;margin-top: 20px;padding-left: 20px;padding-right: 20px">
            <div style="display: flex;flex-direction: row;justify-content: space-between;align-items: center;">
                <p style="font-size: 20px;color: #333333;">
                    <a href="/u/<%=blog.name%>/<%=blog.time.day%>/<%=blog.title%>">
                        <%=blog.title%>
                    </a>
                </p>
                <span style="font-size: 12px;color: #aaaaaa"><%=blog.time.minute%></span>
            </div>

            <div style="width: 100%;" align="right">
                <div style="height: 30px;border-top: solid 1px #dddddd;width: 150px;display: flex;flex-direction: row;justify-content: space-around;align-items: center">
                    <div>
                        <img src="http://39.108.190.79:3389/uploads/eye.png" style="margin-right: 5px;opacity: 0.6">
                        <span style="color: #aaaaaa"><%=blog.pv%></span>
                    </div>
                    <div>
                        <img src="http://39.108.190.79:3389/uploads/comment.png" style="margin-right: 5px;opacity: 0.6">
                        <span style="color: #aaaaaa"><%=blog.commits.length%></span>
                    </div>
                </div>
            </div>
        </div>
    <%})%>
<%}%>

<%-include footer%>